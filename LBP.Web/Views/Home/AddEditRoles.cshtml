@model LBP.Web.ViewModels.AddEditRolesViewModel

@{
    ViewBag.Title = Model.RolId.HasValue ? "Editar Rol" : "Agregar Rol";
}

<div class="container">
    <div class="card card-register mx-auto mt-5">
        <div class="card-header">@ViewBag.Title</div>
        <div class="card-body">
            <form method="post" action="@Url.Action("AddEditRoles")">
                @Html.HiddenFor(X => X.RolId)
                <div class="form-group">
                    <div class="form-row">
                        <div class="col-md-6">
                            <label for="exampleInputName">Acronimo</label>
                            @Html.TextBoxFor(X => X.Acronimo, new { @class = "form-control",
                           placeholder = "Ingresa la Acronimo del rol",
                           style = "text-transform:uppercase",
                           type = "text"
                       })
                        </div>
                        <div class="col-md-6">
                            <label for="exampleInputName">Descripción</label>
                            @Html.TextBoxFor(X => X.Descripcion, new { @class = "form-control",
                           placeholder = "Ingresa la descripción del rol",
                           style = "text-transform:uppercase",
                           type = "text"
                       })
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary ">
                    <i class="fa fa-save"></i>&nbsp;Guardar
                </button>
                <a class="btn btn-default" href="@Url.Action("LstRoles")">
                    <i class="fa fa-arrow-back"></i>&nbsp;Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

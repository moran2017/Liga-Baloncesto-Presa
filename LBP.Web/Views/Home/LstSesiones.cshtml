@model LBP.Web.ViewModels.Sesion.LstSesionesViewModel

@{
    ViewBag.Title = "Lista de Sesiones";

    String strRol = String.Empty;

    if (Session["objUsuario"] != null)
    {
        strRol = ((LBP.Web.Models.Usuarios)Session["objUsuario"]).Roles.Acronimo;
    }
}
@if (strRol == "DES")
{
<div class="card mb-3">
    <div class="card-header">
        <i class="fa form-search"></i> @ViewBag.Title
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Inicio Sesión</th>
                        <th>Cierre Sesión</th>
                        <th>Usuario</th>
                        <th>Rol</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Inicio Sesión</th>
                        <th>Cierre Sesión</th>
                        <th>Usuario</th>
                        <th>Rol</th>
                        <th>Eliminar</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model.LstSesiones)
                    {
                        <tr>
                            <td>@item.InicioSesion</td>
                            <td>@item.CierreSesion</td>
                            <td>@item.Usuarios.Nombre</td>
                            <td>@item.Roles.Descripcion</td>
                            <td>
                                <a href="@Url.Action("DeleteSesion", new { SesionId = item.SesionId })" class="btn btn-default">
                                    <i class="fa fa-trash-o"></i>&nbsp; Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">@DateTime.Now</div>
</div>
}
else if (strRol == "ADM")
{
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa form-search"></i> @ViewBag.Title
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Inicio Sesión</th>
                            <th>Cierre Sesión</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Inicio Sesión</th>
                            <th>Cierre Sesión</th>
                            <th>Usuario</th>
                            <th>Rol</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model.LstSesiones)
                        {
                            <tr>
                                <td>@item.InicioSesion</td>
                                <td>@item.CierreSesion</td>
                                <td>@item.Usuarios.Nombre</td>
                                <td>@item.Roles.Descripcion</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">@DateTime.Now</div>
    </div>
}




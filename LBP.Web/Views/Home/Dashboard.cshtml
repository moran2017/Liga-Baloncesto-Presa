                    <i class="fa fa-user-circle"></i>
                </div>
                <div class="mr-5">@Model.nUsuarios</div>
            </div>
            <a class="card-footer text-white clearfix small z-1" href="@Url.Action("LstUsuarios")">
                <span class="float-left">Número de Usuarios</span>
                <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        </div>
    </div>
